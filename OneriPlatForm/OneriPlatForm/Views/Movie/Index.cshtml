@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Öneri Parametreleri</h5>

                <!-- General Form Elements -->
                <form>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Film Adı</label>
                        <div class="col-sm-10">
                            <input type="text" id="title_id" name="title" class="form-control movieform">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Film Yılı</label>
                        <div class="col-sm-10">
                            <input type="text" id="year_text" name="year" class="form-control movieform">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Tür</label>
                        <div class="col-sm-10">
                            <input type="text" id="genre_text" name="genre" class="form-control movieform">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputEmail" class="col-sm-2 col-form-label">Puan</label>
                        <div class="col-sm-10">
                            <input type="text" id="imdb_text" name="imdb" class="form-control movieform">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Yönetmen</label>
                        <div class="col-sm-10">
                            <input type="text" name="director" id="director_text" class="form-control movieform">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <button type="submit" id="moviepost" class="btn btn-primary">Getir</button>
                        </div>
                    </div>

                </form><!-- End General Form Elements -->
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Year</th>
                            <th>Genre</th>
                            <th>IMDb</th>
                            <th>Director</th>
                            <!-- ... Diğer sütun başlıkları ... -->
                        </tr>
                    </thead>
                    <tbody id="tablemovie">
                    </tbody>

                </table>
            </div>
        </div>

    </div>


</div>
